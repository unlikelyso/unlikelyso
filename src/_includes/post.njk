    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title }}</title>

    <meta name="description" content="{{ description }}">
    <meta property="og:type" content="article">
    <meta property="og:title" content="{{ title }}">
    <meta property="og:image" content="{{ image }}">
    <meta property="og:url" content="https://unlikely.so{{ page.url }}">
    <meta property="og:description" content="{{ description }}">

    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="../assets/favicon//apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="../assets/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="../assets/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="../assets/favicon/site.webmanifest" />
    <link rel="stylesheet" href="../styles/common.css" />
    <link rel="stylesheet" href="../styles/blog.css" />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-F6SNPYZPH7"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-F6SNPYZPH7');
    </script>
    <script src="https://kit.fontawesome.com/efed93f1aa.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <div class="ts-navbar-container ts-white">
      <div class="ts-container">
        <header class="ts-navbar">
          <a class="ts-navbar__logo" href="/">
            <img src="../assets/images/logo.png" height="32px" alt="Unlikely"/>
          </a>
          <div class="ts-burger">
            <i class="ts-open fa-solid fa-bars"></i>
            <span class="ts-close">
              <i class="fa-solid fa-xmark"></i>
            </span>
          </div>
          <nav class="ts-navbar__navbar">
            <ul class="ts-links">
              <li>
                <a class="ts-navbar__link ts-text-blue-2" href="/blog">0&rarr;1 Lessons</a>
              </li>
              <li class="ts-btn-container d-none">
                <a
                  class="ts-btn ts-btn--sm ts-btn-primary ts-fs-6 text-decoration-none rounded-4 text-uppercase fw-500"
                  href="mailto:tina@unlikely.so"
                >
                  Contact
                </a>
              </li>
            </ul>
          </nav>
        </header>
      </div>
    </div>

    <section
      class="ts-hero ts-hero--sm"
      style="background-image: url({{ image }})">
    </section>

    <section class="mt-64">
      <div class="ts-container">
        <div class="ts-blog-details__title mb-24">
          <div>
            <h1 class="ts-fs-1 mb-16 ts-font-inter fw-900">{{ title }}</h1>
            <div class="ts-profile mt-24">
              <div>
                <img
                  class="ts-profile__img"
                  src="../assets/images/blog/user.png"
                  alt="Tina Nguyen" />
              </div>
              <div>
                <p class="ts-fs-5 fw-400">
                  Tina Nguyen
                  <a href="https://www.linkedin.com/in/nanguyen">
                    <img width="16"
                       src="../assets/images/linked-in.png"
                       alt="LinkedIn"/>
                  </a>
                </p>
                <p class="ts-fs-6 ts-text-gray-9 fw-400">{{ length }} read Â· {{ date | postDate }}</p>
              </div>
            </div>
          </div>
        </div>

        <div class="ts-blog-details__content">
          <div>
            <p class="ts-fs-5 mb-32">
              <em>{{ description | safe }}</em>
            </p>
            <div class="ts-fs-5 mb-24">
              {{ content | safe }}
            </div>
          </div>
          <div class="ts-fs-5 callout mb-40">
            {{ callout | safe }}
          </div>
        </div>

      </div>
    </section>

    <section class="ts-blog-more ts-bg-gray-8 ts-py-80">
      <div class="ts-container">
        <div class="ts-container p-0">
          <div class="ts-blog-group mb-24">
            {% set posts = collections.posts | reverse | limit(4) %}
            {% for post in posts %}
              {% if (post.url != page.url ) and (loop.index0 < 4) %}
                {% include "postlist.njk" %}
              {% endif %}
            {% endfor %}
          </div>
          <a class="ts-fs-5 ts-text-blue-2 text-decoration-none ts-btn-seemore fw-400" href="/blog">Read more<i class="icon-shift ts-fs-7 fa-solid fa-arrow-right"></i></a>
        </div>
      </div>
    </section>

    <footer class="ts-footer text-center mb-64">
      <div class="ts-container">
        <div class="ts-footer__content">
          &copy; Unlikely LLC
          <script>document.write( new Date().getFullYear() );</script>
        </div>
      </div>
    </footer>

    <script src="../js/common.js"></script>
  </body>
</html>

